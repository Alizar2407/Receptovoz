<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"]</title>

    @{
        if (ViewData["BootstrapEnabled"] != null && (bool)(ViewData["BootstrapEnabled"]))
        {
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
                  rel="stylesheet"
                  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
                  crossorigin="anonymous" />
        }
    }
    <link rel="stylesheet" href="~/css/general_styles.css" type="text/css" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
</head>

    <body>
        <header>
            <script src="~/js/generate_navbar.js"></script>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            <script src="~/js/generate_footer.js"></script>
        </footer>
    </body>
</html>
